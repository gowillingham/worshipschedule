<div class="content round shadow signin" id="forgot_password">
  <%= render 'shared/show_flash' %>
  <table>
    <tbody>
      <tr>
        <td class="left">
          <h2>Can't sign in? Forget your password?</h2>
          <p>
            Enter your email address below and we'll send you password reset instructions.
          </p>
          <%= form_for(:user, :url => reset_profile_path) do |f| %>
            <%= render 'shared/errors', :object => f.object %>
            <div class="field">
              <%= f.label :email, 'Enter your email address' %><br />
              <%= f.text_field :email %>
            </div>
            <div class="action">
              <%= f.submit "Send me reset instructions" %>
            </div>
          <% end %>
        </td>
        <td class="right">
          <div class="spam_note">
            <h2>A note about spam filters</h2>
            <p>
              If you don't get a note from us within a couple minutes please be sure to check your spam filter.
            </p>
            <p><strong>The email will be coming from <%= "do-not-reply@email.com" %></strong></p>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="footer">
    Nevermind, <%= link_to "send me back to the sign in screen", signin_path %>
  </div>
</div>
