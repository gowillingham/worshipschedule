<div class="header big">
  <%= "Every person from your church" %>
  <button class="button" style="float:right;">Add new person</button>
</div>
<table class="people">
  <thead>
    <tr>
      <th colspan="4" class="big">
        <strong>Your church:</strong> <%= current_account.name %>
        <span class="link">See the <%= link_to 'administrator list', "/", :class => 'cancel' %> to give or take away admin powers</span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_slice(3) do |row| %>
      <tr>
        <% row.each do |user| %>
          <%= render 'user_cell', :user => user %>
        <% end %>
      <tr>
    <% end %>
  </tbody>
</table>

