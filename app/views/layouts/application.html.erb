<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "jquery/jquery-1.5.min.js", "rails" %>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
  <%= stylesheet_link_tag 'style',  :media => 'screen' %>
  <!--[if IE]><link rel="stylesheet" href="blueprint/ie.css" type="text/css" media="screen, projection" /><![endif]-->  
</head>
<body id="page_<%= @context %>">
  <div class="container">
    <div class="span-24 last">
      <div id="header">
        <div class="user">
          <%= current_user.name_or_email %>
          | <a href="#">My info</a>
          | <%= link_to 'sign out', signout_path, :method => :delete %>
          | <a href="#">Help</a>
        </div>
        <h1><%= header_text %></h1>
        <%= render 'shared/tabstrip' %>
      </div>
    </div>
    <div class="span-18">
      <div id="main">
        <%= render 'shared/show_flash' %>
        <div class="content shadow">
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="span-6 last">

    </div>
    <div class="span-24 last">
      <div id="footer">
        Managed with <%= link_to APP_NAME, root_url %>
      </div>
    </div>
  </div>
    <% if Rails.env.development? %>
      <div class="span-24"><%= debug(params) %></div>
      <div class="span-24"><%= debug(session) %></div>
    <% end %>
</body>
</html>
