<div class="content shadow">
  <div class="header">
		<% if admin? || team_admin?(@team, current_user) %>
			<div class="link_bar">
				<%= link_to 'New skill', new_team_skill_path(@team) %>
				|
				<%= link_to 'Edit', edit_team_skill_path(@team, @skill) %>
			</div>
		<% end %>
		<%= link_to "&laquo; All skills".html_safe, team_skills_path(@team), :class => 'back_link' %>
  </div>
	<div class="listing">
		<h3><%= @skill.name %></h3>
		<p>
		<% if @skill.description.blank? %>
			No description provided
		<% else %>
			<%= @skill.description %>
		<% end %>
		</p>
	</div>
</div>	
