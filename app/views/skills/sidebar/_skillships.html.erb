<ul class="skillships">
	<% unless @skillships.nil? || !@skillships.any? %>
		<% @skillships.each do |skillship| %>
			<li>
				<%= gravatar_for(skillship.membership.user, { :size => 25, :default => :identicon  }) %>
				<div>
					<%= skillship.membership.user.name_or_email %>
				</div>
			</li>
		<% end %>
	<% else %>
		<li class="blank_slate">
			None of the people on this team have been assigned to this skill
		</li>
	<% end %>
</ul>
